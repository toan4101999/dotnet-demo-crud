@model List<Job>;
@{
    ViewData["Title"] = "Home Page";

    List<Job> jobs = Model;
}

<body>
    <div class="homePage">


        <div class="container">
            <section>
                <div class="container" style="margin-top: 25px;">


                    <div class="row">
                        <div class=" col-lg-12 col-md-12" style="margin-top: 20px;">
                            <div class="box_general" style="padding-bottom: 5px;">
                                <h2 class="text_ellipsis uppercase"
                                    style="border-bottom: 1px solid rgb(238, 238, 238);">
                                    <i class="li-briefcase">
                                    </i> &nbsp;Việc làm

                                </h2>
                                <div class=" col-lg-12 col-md-12" style="padding: 5px;">

                                    <div id="hurryjobs">

                                        @foreach (var job in jobs)
                                        {
                                            <div class="col-md-6 col-lg-6 job-over-item">
                                                <div class="row job-itemnow">
                                                    <div class="col-md-12 col-lg-12 job_info">
                                                        <div class="company_logo">
                                                            <a href="" target="_blank">
                                                                <div class="logo_box">
                                                                    <img class="lazy-load" src="~/@job.imageCompany"
                                                                        lazy="error" runat="server">
                                                                </div>
                                                            </a>
                                                        </div>
                                                        <div class="company_name">
                                                            <p class="j_title text_ellipsis">
                                                                <a href="" id="vieclamtuyengap" class="el-tooltip item"
                                                                    title="">
                                                                    <span>
                                                                        <strong>@job.nameJob</strong>
                                                                    </span>
                                                                </a>
                                                            </p>
                                                            <div class="j_company">
                                                                <div class="name">
                                                                    <a href="" target="_blank" title="">
                                                                        <span>
                                                                            @job.nameCompany
                                                                        </span>
                                                                    </a>
                                                                </div>
                                                                <div class="viewed">
                                                                </div>
                                                            </div>
                                                            <div class="table-item">
                                                                <div class="dollar">
                                                                    <i class="li-cash-dollar">
                                                                    </i> &nbsp;@job.salary
                                                                </div>
                                                                <div title="" class="location text_ellipsis"
                                                                    style="padding-left: 90px;">
                                                                    <i class="li-map-marker">
                                                                    </i> &nbsp;@job.location
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <hr class="mt-n mb-20 maker-none">
                                            </div>
                                        }
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                </div>


</body>
